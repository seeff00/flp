{% extends 'base.html.twig' %}

{% block title %}Hello ProductsController!{% endblock %}

{% block body %}
    <style>
        #products-wrapper .product.column:hover:before {
            background: linear-gradient(#ffeb3b, {{ currentCategory.color }}, #ff00e0, #ffffff);
        }
    </style>
    <div id="products-page">
        <div id="products-category">
            <div class="products-category-description container mt-5">
                <h3>{{ currentCategory.title }}</h3>
                {% if currentCategory.description is not empty %}
                    <div class="description">
                        {{ currentCategory.description }}
                    </div>
                {% endif %}
            </div>
            <div class="filters mb-4">
                <div class="dropdown filter-category">
                    <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false"
                            style="background-color: {{ currentCategory.color }};">
                        {{ currentCategory.title }}
                    </button>
                    <ul class="dropdown-menu">
                        {% for category in categories %}
                            <li><a class="dropdown-item"
                                   href="{{ path('app_products', {'cid':category.id, 'limit':3, 'page':1 }) }}">{{ category.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                {% if currentCategory.externalLink is empty %}
                <div class="dropdown filter-per-page">
                    <button class="btn btn-info dropdown-toggle" type="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                        {{ limit }}
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item"
                               href="{{ path('app_products', {'cid':cid, 'limit':3, 'page':1 }) }}">3</a></li>
                        <li><a class="dropdown-item"
                               href="{{ path('app_products', {'cid':cid, 'limit':6, 'page':1 }) }}">6</a></li>
                        <li><a class="dropdown-item"
                               href="{{ path('app_products', {'cid':cid, 'limit':9, 'page':1 }) }}">9</a></li>
                    </ul>
                </div>
                {%  endif %}
            </div>
            {% if currentCategory.externalLink is not empty %}
            <div class="iframe-product">
                <div id="flp-external-wrapper">
                    <iframe id="flp-external" src="{{ currentCategory.externalLink }}"></iframe>
                </div>
            </div>
            {% else %}
            <div id="products-wrapper" class="wrapper">
                <div class="products-container">
                    {% for product in products %}
                        <div class="product column">
                            <div class="border-effect">
                                {% include('components/product.html.twig') %}
                                <div class="product-order">
                                    <a id="more" class="btn btn-info btn-lg btn-block request" href="{{ path('app_product', { id: product.id } ) }}" >{{ translations['More']|trans }}</a>
{#                                    <button id="more" type="button" class="btn btn-info btn-lg btn-block request"#}
{#                                            data-bs-toggle="modal"#}
{#                                            data-bs-target="#basicExampleModal-{{ product.id }}">{{ translations['More']|trans }}</button>#}
                                    <button id="request" type="button" class="btn btn-lg btn-block request"
                                            style="background-color: {{ currentCategory.color }};"
                                            data-bs-toggle="modal" data-bs-target="#request-modal-{{ product.id }}">
                                        Заяви
                                    </button>
                                </div>
                            </div>

                            <!-- Modal -->
                            <div class="product-modal modal fade" id="basicExampleModal-{{ product.id }}" tabindex="-1"
                                 role="dialog" aria-labelledby="exampleModalLabel"
                                 aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-body">
                                            <div class="product">
                                                <button type="button" class="btn-close" aria-label="Close"></button>
                                                {% include('components/product.html.twig') %}
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <div class="product-order">
                                                <button id="request" type="button" class="btn btn-lg btn-block request"
                                                        style="background-color: {{ currentCategory.color }};"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#request-modal-{{ product.id }}">Заяви
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            {# Modal Request #}
                            <div class="modal fade request-modal" id="request-modal-{{ product.id }}" tabindex="-1"
                                 role="dialog" aria-labelledby="requestModalLabel"
                                 aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-body">
                                            <div class="column">
                                                <div class="head">
                                                    <button type="button" class="btn-close" aria-label="Close"
                                                            style="background-color: {{ currentCategory.color }};"></button>
                                                    <span class="headline title">{{ translations['Request for product']|trans }}</span><br/>
                                                </div>
                                            </div>
                                            <form id="request-form-{{ product.id }}">
                                                <div class="required">
                                                    <label>
                                                        <input name="name" placeholder="Име, Фамилия" type="text"
                                                               class="block w-full px-2 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring"/>
                                                    </label>
                                                </div>
                                                <div class="required">
                                                    <label>
                                                        <input name="phone" placeholder="Телефон" type="text"
                                                               class="block w-full px-2 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring"/>
                                                    </label>
                                                </div>
                                                <div class="required">
                                                    <label>
                                                        <input name="email" placeholder="Имейл" type="text"
                                                               class="block w-full px-2 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring"/>
                                                    </label>
                                                </div>
                                                <div class="required">
                                                    <label>
                                                        <textarea name="message" rows="4" placeholder="Съобщение"
                                                                  class="block w-full h-48 px-2 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring">{{ (translations['Request for 1 count'] ~ ' "' ~ product.subTitle ~ '" ' ~ translations['with product code'] ~ ' "' ~ product.code ~ '".') | trans }}</textarea>
                                                    </label>
                                                </div>
                                                <input type="hidden" name="pid" value="{{ product.id }}"/>
                                                <div class="flex justify-between mt-6">
                                                    <div class="message" style="display: none;"></div>
                                                    <div class="product-order">
                                                        <input type="hidden" id="g-recaptcha-response"
                                                               name="g-recaptcha-response">
                                                        <input type="hidden" name="action" value="validate_captcha">
                                                        <button id="send-btn"
                                                                type="submit"
                                                                class="btn btn-lg btn-block request"
                                                                data-sitekey="6LdX9CcpAAAAAHsbVpU56Az2rSTDJf4q7oCvys3z"
                                                                data-action='submit'
                                                                style="background-color: {{ currentCategory.color }};">
                                                            {{ translations['Send']|trans }}
                                                        </button>
                                                        {#                                                    {% include('components/send_button.html.twig') %} #}
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            {% if number_of_pages > 0 %}
                <nav class="products-pagination" aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        {% for i in range(1, number_of_pages) %}
                            <li class="page-item"><a class="page-link"
                                                     href="{{ path('app_products', {page: i, limit: limit, cid:cid }) }}">{{ i }}</a>
                            </li>
                        {% endfor %}
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            {% endif %}
        </div>
        {% endif %}
    </div>
{% endblock %}
