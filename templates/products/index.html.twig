{% extends 'base.html.twig' %}

{% block title %}Hello ProductsController!{% endblock %}

{% block body %}
    <div id="products-wrapper" class="wrapper container mt-5">
        <h2>{{ translations['Drinks']|trans }}</h2>
        <div class="description">
            Създадените от най-висококачествени съставки напитки и добавки на Форевър, съчетани със здравословна и балансирана храна, са път към чудесно здраве и отлична форма. Основен елемент на продуктите ни е чист, стабилизиран гел от алое вера, извлечен от самата сърцевина на листата. Изобилието от натурални хранителни вещества в него допринася за оптимално здраве и жизненост.
        </div>
        <br/>
        <br/>
        <table class="table datagrid">
            <tbody>
            <tr>
                {% for product in products %}
                {% if (loop.index - 1) is divisible by(3) and (loop.index - 1) > 0 %}
            </tr>
            <tr>
                {% endif %}
                <div class="product column left">
                    <div class="column">
                        <div class="head">
                            <span class="headline title">{{ product.title }}</span><br/>
                            <p><span class="headline hl2 subtitle">{{ product.subTitle }}</span></p>
                        </div>
                        <div id="products-carousel-{{ product.id }}" class="product-carousel carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                {% if productsImages[product.id] is defined %}
                                {% for productImage in productsImages[product.id] %}
                                    {%  if loop.index == 1 %}
                                        <div class="carousel-item active">
                                            <img src="/uploads/attachments/{{ productImage }}" class="d-block w-100" alt="...">
                                        </div>
                                    {% else %}
                                    <div class="carousel-item">
                                        <img src="/uploads/attachments/{{ productImage }}" class="d-block w-100" alt="...">
                                    </div>
                                    {% endif %}
                                {% endfor %}
                                {% endif %}
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#products-carousel-{{ product.id }}" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#products-carousel-{{ product.id }}" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                    <p class="product-description">{{ product.description }}</p>
                    <div class="product-details">
                    <span class="product-code left"><b>{{ translations['Code']|trans }}</b><br/><span>{{ product.code }}</span></span>
                    <span class="product-amount left"><b>{{ translations['Amount']|trans }}</b><br/><span>{{ product.amount }}</span><span class="product-detail">{{ product.measurement.title }}</span></span>
                    <span class="product-price right"><b>{{ translations['PCP']|trans }}</b><span class="tooltiptext">Препоръчителна цена за потребители</span><br/><span>{{ (product.price / 100) |format_currency('BGN') }}</span></span>
                </div>
                    <div class="product-order">
                        <button id="request" type="button" class="btn btn-info btn-lg btn-block request" data-bs-toggle="modal" data-bs-target="#basicExampleModal">{{ translations['More']|trans }}</button>
                        <button id="request" type="button" class="btn btn-warning btn-lg btn-block request" data-bs-toggle="modal" data-bs-target="#orderModal">Заяви</button>
                    </div>
                </div>

                <!-- Modal -->
                <div class="modal fade" id="basicExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                     aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                <div class="product">
                                    <div class="column">
                                        <div class="head">
                                            <span class="headline title">{{ product.title }}</span><br/>
                                            <p><span class="headline hl2 subtitle">{{ product.subTitle }}</span></p>
                                        </div>
                                        <div id="products-carousel-modal-{{ product.id }}" class="product-carousel-modal carousel slide" data-bs-ride="carousel">
                                            <div class="carousel-inner">
                                                {% if productsImages[product.id] is defined %}
                                                    {% for productImage in productsImages[product.id] %}
                                                        {%  if loop.index == 1 %}
                                                            <div class="carousel-item active">
                                                                <img src="/uploads/attachments/{{ productImage }}" class="d-block w-100" alt="...">
                                                            </div>
                                                        {% else %}
                                                            <div class="carousel-item">
                                                                <img src="/uploads/attachments/{{ productImage }}" class="d-block w-100" alt="...">
                                                            </div>
                                                        {% endif %}
                                                    {% endfor %}
                                                {% endif %}
                                            </div>
                                            <button class="carousel-control-prev" type="button" data-bs-target="#products-carousel-modal-{{ product.id }}" data-bs-slide="prev">
                                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                <span class="visually-hidden">Previous</span>
                                            </button>
                                            <button class="carousel-control-next" type="button" data-bs-target="#products-carousel-modal-{{ product.id }}" data-bs-slide="next">
                                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                <span class="visually-hidden">Next</span>
                                            </button>
                                        </div>
                                    </div>
                                    <p class="product-description">{{ product.description }}</p>
                                    <div class="product-details">
                                        <span class="product-code left"><b>{{ translations['Code']|trans }}</b><br/><span>{{ product.code }}</span></span>
                                        <span class="product-amount left"><b>{{ translations['Amount']|trans }}</b><br/><span>{{ product.amount }}</span><span class="product-detail">{{ product.measurement.title }}</span></span>
                                        <span class="product-price right"><b>{{ translations['PCP']|trans }}</b><span class="tooltiptext">Препоръчителна цена за потребители</span><br/><span>{{ (product.price / 100) |format_currency('BGN') }}</span></span>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <div class="product-order">
                                    <button id="request" type="button" class="btn btn-warning btn-lg btn-block request" data-bs-toggle="modal" data-bs-target="#orderModal">Заяви</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="orderModal" tabindex="-1" role="dialog" aria-labelledby="orderModalLabel"
                     aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                <form wire:submit.prevent="send">
                                    <div class="required">
                                        <input wire:model.defer="name" placeholder="Име, Фамилия" type="text" class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring">
                                    </div>
                                    <div class="required">
                                        <input wire:model.defer="tel" placeholder="Телефон" type="text" class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring">
                                    </div>
                                    <div class="required">
                                        <input wire:model.defer="email" placeholder="Имейл" type="text" class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring">
                                    </div>
                                    <div class="required">
                                        <textarea wire:model.defer="message" placeholder="Съобщение" class="block w-full h-48 px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring">					</textarea>
                                    </div>
                                    <div class="flex justify-between mt-6">
                                        <a @click="show = false" class="cursor-pointer px-8 py-2.5 leading-5 text-white transition-colors duration-300 transform bg-red-600 rounded-md hover:bg-red-400 focus:outline-none focus:bg-gray-600">
                                            Откажи
                                        </a>

                                        <button class="px-8 py-2.5 leading-5 text-white transition-colors duration-300 transform bg-aloe-green-dark rounded-md hover:bg-aloe-green-nav-hover focus:outline-none focus:bg-gray-600">
                                            Изпрати
                                            <div wire:target="send" wire:loading="" class="mr-2">
                                                <span> Изпращане... </span>
                                            </div>
                                        </button>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <div class="product-order">
                                    <button id="request" type="button" class="btn btn-primary btn-lg btn-block request">{{ translations['Send']|trans }}</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {% endfor %}
            </tr>
            </tbody>
        </table>

        {% if number_of_pages > 0 %}
        <nav class="products-pagination" aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                {% for i in range(1, number_of_pages) %}
                    <li class="page-item"><a class="page-link" href="{{ path('app_products', {page: i, limit: limit, category:category_id }) }}">{{ i }}</a></li>
                {% endfor %}
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
        {% endif %}
    </div>
{% endblock %}
